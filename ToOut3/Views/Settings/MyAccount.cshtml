@model ViewInfo

@{
    ViewData["Title"] = "My Account";
}

<section class="grating text-center">
    <div class="container">
        <h1>- My Account -</h1>
    </div>
</section>

<section class="text-center">
    <div class="container">
        <i class="fas fa-user-circle" style="font-size:180px"></i>
    </div>
</section>
<br /><br />
<section>
    <div class="container">
            <table class="table table-striped">
                <tr>
                    <th>ID</th>
                    <td>@Model.UserInfo.ID</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.UserInfo.Name</td>
                </tr>
                <tr>
                    <th>Role Type</th>
                    <td>@Model.UserInfo.Role</td>
                </tr>

            </table>
        </div>
</section>
<br /><hr /><br />
<section>
    <div class="container">
        <form method="post" asp-action="MyAccount" ng->
            <fieldset>
                <legend><b>Change Password</b></legend>
                <br />
                <table class="table table-active">
                    <tr>
                        <th>Enter your password</th>
                        <td><input asp-for="@Model.NewPassword.CurrentPassword" class="form-control inputnewPass" type="password" /></td>
                    </tr>
                    <tr>
                        <th>Enter your new password</th>
                        <th>Accept your new password</th>
                    </tr>
                    <tr>
                        <td><input asp-for="@Model.NewPassword.Confirm" class="form-control inputnewPass" type="password" /></td>
                        <td><input asp-for="@Model.NewPassword.NewPassword" class="form-control inputnewPass" type="password" /></td>
                    </tr>

                    <tr>
                        <td><button type="submit" class="btn btn-outline-primary">Submit</button></td>
                    </tr>
                </table>

                <div asp-validation-summary="All"></div>

            </fieldset>
        </form>
    </div>
</section>
<br /><br /><br /><br />



